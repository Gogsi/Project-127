<Window x:Class="Project_127.PopupDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_127"
        mc:Ignorable="d"
        Title="Popup Download" 
        Background="{x:Static local:Globals.PU_Background}"
        WindowStyle="None" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Height="200"
        Width="400"
        Icon="/Artwork/icon.png">
    <Window.Resources>
        <Style TargetType="Button" x:Key="btn">
            <Setter Property="Background" Value="{x:Static local:Globals.PU_ButtonBackground}"/>
            <Setter Property="Foreground" Value="{x:Static local:Globals.PU_ButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{x:Static local:Globals.PU_ButtonBorderBrush}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="4"
                            BorderThickness="{x:Static local:Globals.PU_ButtonBorderThickness}"
                            Padding="5"
                            BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{x:Static local:Globals.PU_ButtonMOBackground}"/>
                    <Setter Property="Foreground" Value="{x:Static local:Globals.PU_ButtonMOForeground}"/>
                    <Setter Property="BorderBrush" Value="{x:Static local:Globals.PU_ButtonMOBorderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="lbl" TargetType="Label">
            <Setter Property="Foreground" Value="{x:Static local:Globals.PU_LabelForeground}" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="pb" TargetType="ProgressBar">
            <Setter Property="Background" Value="{x:Static local:Globals.PU_ProgressBarBackground}"/>
            <Setter Property="Foreground" Value="{x:Static local:Globals.PU_ProgressBarBackground}"/>
            <Setter Property="BorderBrush" Value="{x:Static local:Globals.PU_ProgressBarBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Margin" Value="20" />
        </Style>
    </Window.Resources>
    <Border BorderBrush="{x:Static local:Globals.PU_BorderBrush}" BorderThickness="2">
        <Border BorderBrush="{x:Static local:Globals.PU_BorderBrush_Inner}" BorderThickness="0" Margin="10,5" CornerRadius="10">
            <!--<Border BorderBrush="{x:Static local:Globals.PU_BorderBrush_Inner}" BorderThickness="2" Margin="10" CornerRadius="10">-->

            <Grid x:Name="myGrid">
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="myRow0" Height="*"/>
                    <RowDefinition x:Name="myRow1" Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="myColumn0" Width="*"/>
                    <ColumnDefinition x:Name="myColumn1" Width="*"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="lbl_Main" Grid.Row="0" Content="Downloading..." Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource lbl}"/>

                <ProgressBar x:Name="pb_Main" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource pb}"/>

            </Grid>

        </Border>
    </Border>
</Window>

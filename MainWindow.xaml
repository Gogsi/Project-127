<Window x:Class="Project_127.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_127"
        mc:Ignorable="d"
        Title="Does not matter since this is not displayed. Think of reading this like finding an easter egg."
        Height="540" Width="800"
        WindowStyle="None" 
        AllowsTransparency="True" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >
    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="btn">
            <Setter Property="Background" Value="#B3000000"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btn_Small" BasedOn="{StaticResource btn}">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="White" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btn_hamburgeritem" BasedOn="{StaticResource btn}">
            <Setter Property="Margin" Value="0,6"/>
        </Style>



    </Window.Resources>
    <Grid x:Name="GridMain">
        <Grid.Background>
            <!-- USE RELATIVE PATH OR PROJECT RESSOURCE FILES. CTRLF. TODO.-->
            <ImageBrush ImageSource="C:\\Users\\ingow\\source\\repos\\Project-127\\bg.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Button x:Name="btn_Hamburger" Style="{StaticResource btn_Small}" Content="☰" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btn_Hamburger_Click" />
        <Button x:Name="btn_Exit" Style="{StaticResource btn_Small}" Content="X" VerticalAlignment="Top" HorizontalAlignment="Right" Click="btn_Exit_Click"/>
        <Button x:Name="btn_GTA" Margin="550,380,60,60" Content="Launch GTA V" Click="btn_GTA_Click"  Background="AliceBlue"/>


        <Grid x:Name="GridHamburger" Margin="15,93,535,149" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>



            <Button x:Name="btn_Upgrade" Grid.Row="0" Style="{StaticResource btn_hamburgeritem}" Content="Upgrade" Click="btn_Upgrade_Click"/>
            <Button x:Name="btn_Downgrade" Grid.Row="1" Style="{StaticResource btn_hamburgeritem}" Content="Downgrade" Click="btn_Downgrade_Click"/>
            <Button x:Name="btn_SaveFiles" Grid.Row="2" Style="{StaticResource btn_hamburgeritem}" Content="Save File Management" Click="btn_SaveFiles_Click"/>
            <Button x:Name="btn_Settings" Grid.Row="3" Style="{StaticResource btn_hamburgeritem}" Content="Settings" Click="btn_Settings_Click"/>
            <Button x:Name="btn_Readme" Grid.Row="4" Style="{StaticResource btn_hamburgeritem}" Content="ReadMe / Credits" Click="btn_Readme_Click"/>



        </Grid>

    </Grid >




</Window>

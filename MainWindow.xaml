<Window x:Class="Project_127.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_127"
        mc:Ignorable="d"
        Title="RollSun Launcher" Height="360" Width="591">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_Settings" Grid.Row="0" Content="Settings" Click="btn_Settings_Click" Grid.ColumnSpan="3"></Button>
        <Button x:Name="btn_Downgrade" Grid.Row="1" Content="Downgrade" Click="btn_Downgrade_Click" Grid.ColumnSpan="3"></Button>
        <Button x:Name="btn_Upgrade" Grid.Row="2" Content="Upgrade" Click="btn_Upgrade_Click" Grid.ColumnSpan="3"></Button>
        <Button x:Name="btn_LaunchGame" Grid.Row="3" Content="Launch Game" Click="btn_LaunchGame_Click" Grid.ColumnSpan="3"></Button>
    </Grid>
</Window>

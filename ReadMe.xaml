<Page x:Class="Project_127.ReadMe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_127"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="625"      
      Background="{x:Static local:Globals.MW_HamburgerMenuGridBackground}"
      Title="ReadMe">
    <Page.Resources>
        <Style TargetType="{x:Type Button}" x:Key="btn">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="lbl" TargetType="Label">
            <Setter Property="Foreground" Value="{x:Static local:Globals.MW_GTALabelUpgradedForeground}" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style x:Key="btn_main" TargetType="{x:Type Button}" BasedOn="{StaticResource btn}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="20,0"/>
            <Setter Property="Background" Value="{x:Static local:Globals.MW_ButtonBackground}"/>
            <Setter Property="Foreground" Value="{x:Static local:Globals.MW_ButtonForeground}"/>
            <Setter Property="BorderBrush" Value="{x:Static local:Globals.MW_ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="{x:Static local:Globals.MW_ButtonBorderThickness}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{x:Static local:Globals.MW_ButtonMOBackground}"/>
                    <Setter Property="Foreground" Value="{x:Static local:Globals.MW_ButtonMOForeground}"/>
                    <Setter Property="BorderBrush" Value="{x:Static local:Globals.MW_ButtonMOBorderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Height="540">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lbl_Header" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Content="ReadMe" Style="{StaticResource lbl}"/>
        <Button x:Name="btn_SpeedRun" Content="SpeedRun" Grid.Row="1" Grid.Column="0" Click="btn_SpeedRun_Click" Style="{StaticResource btn_main}" MouseEnter="btn_MouseEnter" MouseLeave="btn_MouseLeave"/>
        <Button x:Name="btn_About" Content="About" Grid.Row="1" Grid.Column="1" Click="btn_About_Click" Style="{StaticResource btn_main}" MouseEnter="btn_MouseEnter" MouseLeave="btn_MouseLeave"/>
        <Button x:Name="btn_Credits" Content="Credits" Grid.Row="1" Grid.Column="2" Click="btn_Credits_Click" Style="{StaticResource btn_main}" MouseEnter="btn_MouseEnter" MouseLeave="btn_MouseLeave"/>

        <Grid x:Name="Grid_SpeedRun" Margin="40" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{x:Static local:Globals.MW_ButtonBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="Grid_SpeedRun_Lbl" Style="{StaticResource lbl}" Grid.Row="0"/>
            <Button x:Name="Grid_SpeedRun_Btn" Style="{StaticResource btn}" Grid.Row="1" Margin="100,10" Content="Link" Click="Grid_SpeedRun_Btn_Click"/>
        </Grid>
        <Grid x:Name="Grid_About" Margin="40" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{x:Static local:Globals.MW_ButtonBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="Grid_About_Lbl" Style="{StaticResource lbl}" Grid.Row="0"/>
            <Button x:Name="Grid_About_Btn" Style="{StaticResource btn}" Grid.Row="1" Margin="100,10" Content="Link" Click="Grid_About_Btn_Click"/>
        </Grid>
        <Grid x:Name="Grid_Credits" Margin="40" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="{x:Static local:Globals.MW_ButtonBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label x:Name="Grid_Credits_Lbl" Style="{StaticResource lbl}" Grid.Row="0"/>
            <Button x:Name="Grid_Credits_Btn" Style="{StaticResource btn}" Grid.Row="1" Margin="100,10" Content="Link" Click="Grid_Credits_Btn_Click"/>
        </Grid>

    </Grid>
</Page>
